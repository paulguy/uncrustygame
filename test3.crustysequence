include modular.txt
macro MAXREQ=1000
tag max-request=MAXREQ
macro LFOINBUF=2
buffer sinelfo.wav ; leave this here because there's no consequence for it
                   ; really other than being sint16 when everything else is
                   ; float32 but leave it as a test to assure WAV loading
                   ; continues to function
macro SLOPEINBUF=3
buffer external
macro BENDUPINBUF=4
buffer external
macro BENDDNINBUF=5
buffer external
macro NOISEINBUF=6
buffer external
macro LPFINBUF=7
buffer external
macro HPFINBUF=8
buffer external
macro SININBUF=9
buffer external
macro SQRINBUF=10
buffer external
macro TRIINBUF=11
buffer external
macro SAWINBUF=12
buffer external
; reusable buffers
macro LFOBUF=13
buffer MAXREQ
macro ENVBUF=14
buffer MAXREQ
macro BENDBUF=15
buffer MAXREQ
macro FILTERBUF=16
buffer MAXREQ
; bass 1 Might need further tweaking
channel player ; envelope generator
channel player ; oscillator
macro OSC1BUF=17
buffer MAXREQ
channel player ; filter envelope generator
channel filter
channel player ; left output
channel player ; right output
; snare 1 very incomplete!
channel player ; envelope generator
channel player ; noise gen
macro OSC2BUF=18
buffer MAXREQ
channel filter
channel player ; left output
channel player ; right output
macro BASSDRUM_INST OSCBUF=CH_PLAYER SLOPEINBUF ENVBUF | CH_PLAYER SAWINBUF OSCBUF | CH_PLAYER SLOPEINBUF ENVBUF | CH_FILTER OSCBUF LPFINBUF FILTER_SIZE OSCBUF FILTER_SLICES | CH_TOSTEREO OSCBUF
macro BASSDRUM_INIT=ENV_INIT | OSC_V_INIT 1.0 ENVBUF | ENV_INIT | FILT_S_INIT 0 ENVBUF 1.0 | P_TOS_VOL 1.0 1.0 
macro BASSDRUM_HIT VOL=P_STARTENV VOL 100.0 10 15.0 50 1.0 999999 | P_TONE A1 999999 | P_STARTENV 0.5 100.0 30 10.0 99 1.0 999999 | F_RUN 999999 | P_TOS_RUN 999999
macro BASSDRUM_NOP=-6
macro SNARE_INST OSCBUF=CH_PLAYER SLOPEINBUF ENVBUF | CH_PLAYER NOISEINBUF OSCBUF | CH_FILTER OSCBUF LPFINBUF FILTER_SIZE OSCBUF FILTER_SLICES | CH_TOSTEREO OSCBUF
macro SNARE_INIT=ENV_INIT | OSC_V_INIT 1.0 ENVBUF | FILT_S_INIT 0 ENVBUF 1.0 | P_TOS_VOL 1.0 1.0
macro SNARE_HIT VOL=P_STARTENV VOL 1000.0 1 8.0 100 1.0 999999 | P_TONE 1.0 999999 | F_RUN 999999 | P_TOS_RUN 999999
macro SNARE_NOP=-5
sequence
0 | BASSDRUM_INST OSC1BUF | SNARE_INST OSC2BUF
2
1
1 0 | BASSDRUM_INIT | SNARE_INIT
8
1 200 | BASSDRUM_HIT 0.2 | SNARE_NOP
1 200 | BASSDRUM_NOP | SNARE_HIT 0.6
1 200 | BASSDRUM_HIT 0.1 | SNARE_NOP
1 200 | BASSDRUM_NOP | SNARE_HIT 0.4
1 200 | BASSDRUM_HIT 0.2 | SNARE_NOP
1 200 | BASSDRUM_NOP | SNARE_HIT 0.4
1 200 | BASSDRUM_HIT 0.1 | SNARE_NOP
1 200 | BASSDRUM_NOP | SNARE_HIT 0.4
0 1
