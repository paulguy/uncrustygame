include macros.txt
macro MAXREQ=1000
tag max-request=MAXREQ
macro SQRINBUF=2
buffer square.wav
macro TRIINBUF=3
buffer triangle.wav
macro SAWINBUF=4
buffer saw.wav
macro SININBUF=5
buffer sine.wav
macro LFOINBUF=6
buffer sinelfo.wav
macro SLOPEINBUF=7
buffer external
macro BENDUPINBUF=8
buffer external
macro BENDDNINBUF=9
buffer external
macro NOISEINBUF=10
buffer external
macro FILTERINBUF=11
buffer external
macro LFOBUF=12
buffer MAXREQ
channel player ; LFO generator
macro ENVBUF=13
buffer MAXREQ
channel player ; envelope generator
channel player ; oscillator
macro FILTERBUF=14
buffer MAXREQ
channel filter
channel player ; left output
channel player ; right output
channel silence
macro SYNTHCHAN _BTONE _BLFO _BENV _BFILT=TONE_CHANNEL LFOINBUF _BLFO | GEN_ENV_CHANNEL SLOPEINBUF _BENV | TONE_ENV_CHANNEL _BTONE _BENV _BFILT | FILTER_CHANNEL _BFILT FILTERINBUF FILTER_SIZE _BFILT FILTER_SLICES _BENV | MONO_TO_STEREO_CHAN _BFILT | _BFILT 0 0 0 8 0
sequence
0 | SYNTHCHAN TRIINBUF LFOBUF ENVBUF FILTERBUF
2
1
; set up LFO, filter feedback, and disable filter modulation
1 0 | 10000 0.03 | 0 | 21802 SYNTH_OUTPUT_ADD LFOBUF SYNTH_AUTO_SOURCE 1000 LFOBUF | 22e00 100 100 SYNTH_AUTO_CONSTANT SYNTH_OUTPUT_ADD 0.8 | -3
1
1 5000 | PLAY_TONE 10.0 5000 | START_ENV 0.1 2.0 500 2.0 250 0.5 3250 | PLAY_TONE a2 5000 | 40 5000 | MONO_MIX 5000 | 4 5000
